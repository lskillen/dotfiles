[core]
    editor = vim
    whitespace = trailing-space, space-before-tab
[diff]
    renameLimit=10000
[merge]
    tool = kdiff3
[format]
    headers = "Organization: Cloudsmith Ltd\n"
    numbered = auto
    signoff = true
    coverletter = auto
    keepsubject = true
[push]
    default = simple
    followtags = true
[pull]
    rebase = true
[sendemail]
    confirm = always
    smtpencryption = tls
